{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "lib": ["ESNext", "WebWorker"], // 适配 Workers 运行时
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "types": [
      "@cloudflare/workers-types",
      "@types/node"
    ]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}